                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <ListView fx:id="listLessons" layoutY="-2.0" prefHeight="345.0" prefWidth="669.0" />
            <ListView fx:id="listDiscussions" prefHeight="342.0" prefWidth="679.0" />
            <ListView fx:id="listQuizzes" layoutY="-2.0" prefHeight="345.0" prefWidth="679.0" />
         </children>
    </AnchorPane>
