    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS" >
         <children>
            <MenuBar layoutX="-1.0" layoutY="343.0" prefHeight="28.0" prefWidth="670.0">
              <menus>
                <Menu mnemonicParsing="false" onShowing="#displayListLessons" text="Lessons">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" onShowing="#displayListDiscussions" text="Discussions">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
